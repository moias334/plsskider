-- H√†m c·∫≠p nh·∫≠t config
function UpdateConfig(key, value)
    if getgenv().Config[key] ~= nil then
        getgenv().Config[key] = value
        print("Config Updated:", key, "=", value)
    else
        print("Invalid Config Key:", key)
    end
end

