local function selectTeam(team)
    if team == "Pirates" then
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("SetTeam", "Pirates")
        print("ƒê√£ tham gia ƒë·ªôi Pirates.")
    elseif team == "Marines" then
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("SetTeam", "Marines")
        print("ƒê√£ tham gia ƒë·ªôi Marines.")
    else
        warn("C·∫•u h√¨nh 'Select Join' kh√¥ng h·ª£p l·ªá! Vui l√≤ng ch·ªçn 'Pirates' ho·∫∑c 'Marines'.")
    end
end

local function applySelectTeam()
    if getgenv().Config["Select Join"] then
        selectTeam(getgenv().Config["Select Join"])
    end
end

-- G·ªçi ch·ª©c nƒÉng khi kh·ªüi ƒë·ªông script
applySelectTeam()

if getgenv().Config["Anti AFK"] then
    local VirtualUser = game:service('VirtualUser')
    game:service('Players').LocalPlayer.Idled:connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
    print("Anti AFK Activated!")
end

local function checkDarkbeardBoss()
    for _, npc in pairs(game:GetService("Workspace").Enemies:GetChildren()) do
        if npc.Name == "Darkbeard [Lv. 1000] [Boss]" and npc:FindFirstChild("Humanoid") and npc.Humanoid.Health > 0 then
            return npc
        end
    end
    return nil
end

-- T·∫•n c√¥ng Boss Darkbeard
local function attackBoss(boss)
    -- Trang b·ªã v≈© kh√≠ Melee
    for i, v in pairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
        if v.ToolTip == "Melee" then
            game.Players.LocalPlayer.Character.Humanoid:EquipTool(v)
            break
        end
    end

    -- B·∫≠t Haki v≈© trang
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Buso")

    -- T·∫•n c√¥ng Boss
    while boss and boss:FindFirstChild("Humanoid") and boss.Humanoid.Health > 0 do
        pcall(function()
            -- Bay ƒë·∫øn Boss
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0, 0, -5)
            -- ƒê√°nh b·∫±ng skill X
            game:GetService("VirtualInputManager"):SendKeyEvent(true, "X", false, game)
            wait(0.1)
        end)
        wait(0.1)
    end
end

-- T·ª± ƒë·ªông ki·ªÉm tra v√† ƒë√°nh Boss Darkbeard
local function checkAndAttackDarkbeard()
    task.spawn(function()
        while getgenv().Config["Farm DarkBeard"] do
            local boss = checkDarkbeardBoss()
            if boss then
                print("T√¨m th·∫•y Darkbeard! B·∫Øt ƒë·∫ßu ƒë√°nh boss...")
                attackBoss(boss)
                break
            end
            wait(2)
        end
    end)
end

-- N·∫øu c·∫•u h√¨nh b·∫≠t Farm Darkbeard, t·ª± ƒë·ªông t√¨m boss v√† ƒë√°nh
if getgenv().Config["Farm DarkBeard"] then
    checkAndAttackDarkbeard()
end

local chestsCollected = 0

-- H√†m ƒë·ªïi server
local function Hop()
    print("üîÑ ƒêang ƒë·ªïi server...")
    game:GetService("TeleportService"):Teleport(game.PlaceId)
end

-- H√†m di chuy·ªÉn b·∫±ng Tween
local function Tween2(CFgo)
    local tween_s = game:GetService("TweenService")
    local info = TweenInfo.new(
        (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - CFgo.Position).Magnitude / 200,
        Enum.EasingStyle.Linear
    )
    local tween = tween_s:Create(game.Players.LocalPlayer.Character.HumanoidRootPart, info, {CFrame = CFgo})
    tween:Play()
    return tween
end

-- Auto Chat
local function AutoChat(message)
    game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
end

-- Ki·ªÉm tra v·∫≠t ph·∫©m c√≥ n·∫±m trong danh s√°ch d·ª´ng kh√¥ng
local function checkItemFromChest(item)
    return getgenv().Config["Auto chests will stop if you've"][item] or false
end

-- D·ª´ng nh·∫∑t r∆∞∆°ng n·∫øu nh·∫≠n ƒë∆∞·ª£c v·∫≠t ph·∫©m ƒë·∫∑c bi·ªát
local function stopChestCollecting()
    print("üõë D·ª´ng nh·∫∑t r∆∞∆°ng do nh·∫≠n ƒë∆∞·ª£c v·∫≠t ph·∫©m ƒë·∫∑c bi·ªát")
    getgenv().AutoCollectChests = false
end

-- Auto Farm Chest (Tween)
local function ToggleFarmChestTween()
    spawn(function()
        while getgenv().Config["Auto Farm Chest"] and chestsCollected < getgenv().Config["Chests Before Hop"] do
            local player = game:GetService("Players").LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local collectionService = game:GetService("CollectionService")
            local chests = collectionService:GetTagged("_ChestTagged")

            local nearestDistance, nearestChest = math.huge

            for _, chest in pairs(chests) do
                local distance = (chest:GetPivot().Position - character:GetPivot().Position).Magnitude
                if not chest:GetAttribute("IsDisabled") and distance < nearestDistance then
                    nearestDistance, nearestChest = distance, chest
                end
            end

            if nearestChest then
                local chestPosition = nearestChest:GetPivot().Position
                local tween = Tween2(CFrame.new(chestPosition))
                wait(nearestDistance / 200 + 1) -- Ch·ªù di chuy·ªÉn xong

                if nearestChest and nearestChest:FindFirstChild("TouchInterest") then
                    firetouchinterest(player.Character.HumanoidRootPart, nearestChest, 0)
                    wait(0.1)
                    firetouchinterest(player.Character.HumanoidRootPart, nearestChest, 1)

                    chestsCollected = chestsCollected + 1
                    print("üì¶ ƒê√£ nh·∫∑t r∆∞∆°ng:", chestsCollected, "/", getgenv().Config["Chests Before Hop"])
                    AutoChat("Nh·∫∑t ƒë∆∞·ª£c " .. chestsCollected .. " r∆∞∆°ng r·ªìi ü§ë")

                    if chestsCollected >= getgenv().Config["Chests Before Hop"] then
                        AutoChat("‚úÖ ƒê√£ nh·∫∑t ƒë·ªß " .. getgenv().Config["Chests Before Hop"] .. " r∆∞∆°ng r·ªìi gi·ªù ƒë·ªïi server")
                        if getgenv().Config["Auto Hop Server"] then
                            Hop()
                        else
                            print("‚ùå Auto Hop Server t·∫Øt, kh√¥ng ƒë·ªïi server.")
                        end
                        break
                    end
                end
            end

            wait(1)
        end
    end)
end

-- Auto Farm Chest (Bypass)
local function ToggleFarmChestBP()
    spawn(function()
        while getgenv().Config["Auto Farm Chest"] and chestsCollected < getgenv().Config["Chests Before Hop"] do
            local player = game:GetService("Players").LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local collectionService = game:GetService("CollectionService")
            local chests = collectionService:GetTagged("_ChestTagged")

            local nearestDistance, nearestChest = math.huge

            for _, chest in pairs(chests) do
                local distance = (chest:GetPivot().Position - character:GetPivot().Position).Magnitude
                if not chest:GetAttribute("IsDisabled") and distance < nearestDistance then
                    nearestDistance, nearestChest = distance, chest
                end
            end

            if nearestChest then
                character:PivotTo(CFrame.new(nearestChest:GetPivot().Position))
                wait(0.2)

                if nearestChest and nearestChest:FindFirstChild("TouchInterest") then
                    firetouchinterest(player.Character.HumanoidRootPart, nearestChest, 0)
                    wait(0.1)
                    firetouchinterest(player.Character.HumanoidRootPart, nearestChest, 1)

                    chestsCollected = chestsCollected + 1
                    print("üì¶ ƒê√£ nh·∫∑t r∆∞∆°ng:", chestsCollected, "/", getgenv().Config["Chests Before Hop"])
                    AutoChat("Nh·∫∑t ƒë∆∞·ª£c " .. chestsCollected .. " r∆∞∆°ng r·ªìi ü§ë")

                    if chestsCollected >= getgenv().Config["Chests Before Hop"] then
                        AutoChat("‚úÖ ƒê√£ nh·∫∑t ƒë·ªß " .. getgenv().Config["Chests Before Hop"] .. " r∆∞∆°ng, ƒë·ªïi server ngay!")
                        if getgenv().Config["Auto Hop Server"] then
                            Hop()
                        else
                            print("‚ùå Auto Hop Server t·∫Øt, kh√¥ng ƒë·ªïi server n·ªØa ƒë√¢u.")
                        end
                        break
                    end
                end
            end

            wait(1)
        end
    end)
end

-- Ch·ªçn ch·∫ø ƒë·ªô Auto Farm Chest d·ª±a tr√™n AutoMode
if getgenv().Config["Auto Farm Chest"] then
    chestsCollected = 0 -- Reset s·ªë r∆∞∆°ng khi b·∫≠t l·∫°i

    if getgenv().Config["AutoMode"] == "Tween" then
        ToggleFarmChestTween()
    elseif getgenv().Config["AutoMode"] == "Bypass" then
        ToggleFarmChestBP()
    else
        print("‚ùå AutoMode kh√¥ng h·ª£p l·ªá! Vui l√≤ng ch·ªçn 'Tween' ho·∫∑c 'Bypass' gi√∫p tao.")
    end
end

local function boostFPS(level)
    level = math.clamp(level, 1, 30) -- Gi·ªõi h·∫°n m·ª©c t·ª´ 1 ƒë·∫øn 30
    print("üéØ ƒêang t·ªëi ∆∞u FPS ·ªü m·ª©c:", level)

    -- N·∫øu c√≥ setfpscap, s·ª≠ d·ª•ng ƒë·ªÉ gi·ªõi h·∫°n FPS
    if setfpscap then
        setfpscap(level * 2) -- Gi·ªõi h·∫°n FPS, c√†ng cao th√¨ FPS c√†ng m·ªü
    end

    -- T·∫Øt hi·ªáu ·ª©ng & gi·∫£m t·∫£i ƒë·ªì h·ªça
    local Lighting = game:GetService("Lighting")
    Lighting.GlobalShadows = false
    Lighting.FogEnd = 9e9
    Lighting.Brightness = 0
    
    local Terrain = workspace:FindFirstChildOfClass("Terrain")
    if Terrain then
        Terrain.WaterWaveSize = 0
        Terrain.WaterWaveSpeed = 0
        Terrain.WaterReflectance = 0
        Terrain.WaterTransparency = 1
    end

    -- ·∫®n chi ti·∫øt nh·ªè ƒë·ªÉ t·ªëi ∆∞u h∆°n
    for _, v in ipairs(game:GetDescendants()) do
        if v:IsA("Part") or v:IsA("MeshPart") then
            v.Material = Enum.Material.SmoothPlastic -- Gi·∫£m t·∫£i v·∫≠t li·ªáu
            v.Reflectance = 0 -- Gi·∫£m ƒë·ªô ph·∫£n chi·∫øu
        end
    end
end

local function applyBoostFPS()
    if getgenv().Config["Boost Fps"] then
        boostFPS(getgenv().Config["Boost Fps"])
    end
end

-- G·ªçi ch·ª©c nƒÉng khi kh·ªüi ƒë·ªông script
applyBoostFPS()

-- H√†m bay ƒë·∫øn v·ªã tr√≠ tri·ªáu h·ªìi boss khi nh·∫∑t ƒë∆∞·ª£c "Fist of Darkness"
function DiChuyenToiViTriTrieuHoiBoss()
    local viTriTrieuHoi = CFrame.new(3782.1816, 14.8857, -3500.1265) -- T·ªça ƒë·ªô m·ªõi
    local player = game.Players.LocalPlayer

    if player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = viTriTrieuHoi
        print("üöÄ ƒê√£ di chuy·ªÉn ƒë·∫øn v·ªã tr√≠ tri·ªáu h·ªìi boss Darkbeard")
    else
        warn("‚ö†Ô∏è error con m·∫π n√≥ r·ªìi")
    end
end

-- H√†m ki·ªÉm tra xem ƒë√£ nh·∫∑t ƒë∆∞·ª£c "Fist of Darkness" ch∆∞a
function KiemTraFistOfDarkness()
    local player = game.Players.LocalPlayer
    local tuiDo = player.Backpack:GetChildren()

    for _, vatPham in pairs(tuiDo) do
        if vatPham.Name == "Fist of Darkness" then
            print("üî• ƒê√£ nh·∫∑t ƒë∆∞·ª£c Fist of Darkness yeah ditme n√£y gi·ªù")
            DiChuyenToiViTriTrieuHoiBoss()
            return true -- D·ª´ng nh·∫∑t r∆∞∆°ng
        end
    end
    return false
end

-- Ki·ªÉm tra Fist of Darkness khi nh·∫∑t r∆∞∆°ng
if KiemTraFistOfDarkness() then
    print("üõë D·ª´ng nh·∫∑t r∆∞∆°ng v√¨ ƒë√£ nh·∫∑t ƒë∆∞·ª£c Fist of Darkness")
    return
end

task.spawn(function()
    while true do
        if getgenv().Config["Chat"] ~= "" then
            -- G·ª≠i tin nh·∫Øn v√†o chat
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(
                getgenv().Config["Chat"], 
                "All"
            )
        end
        -- ƒê·ª£i theo th·ªùi gian delay ƒë√£ c·∫•u h√¨nh
        wait(getgenv().Config["Chat Delay"])
    end
end)
